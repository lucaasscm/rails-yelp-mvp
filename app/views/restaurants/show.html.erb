
<p id="notice"><%= notice %></p>

<p class="font-weight-bold">
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone_number %>
</p>

<ul class="list-group">
 <% @restaurant.reviews.each do |review| %>
  <p><i><%= review.content %></i> (<%= review.rating %> stars) <%= link_to 'Delete Review', review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
</ul>

<div class="form-group">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, class: "form-control"%>
    <%= f.input :content, class: "form-control" %>
    <%= f.submit 'Create Review', class:"btn btn-primary text-white my-2 rounded" %>
  <% end %>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class:"btn btn-primary text-white my-3 rounded"  %>

<%= link_to 'Back', restaurants_path, class:"btn btn-primary text-white my-3 mx-2 rounded"%>
